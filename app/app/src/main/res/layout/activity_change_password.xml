<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#80383838"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_margin="50dp"
        android:orientation="vertical"
        android:id="@+id/change_password_layout"
        android:background="@drawable/style_shape_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="修改密码"
            android:padding="10dp"
            android:textColor="@color/colorSkyBlue"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/change_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/style_edit_view"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <EditText
            android:id="@+id/change_password_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/style_edit_view"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:singleLine="true" />
        <Button
            android:id="@+id/change_password_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/style_login_btn"
            android:text="修改"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>



</LinearLayout>
