<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/operator_history_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF527DA3"
        android:navigationIcon="@drawable/ic_back">
        <TextView
            android:id="@+id/operator_history_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="历史记录"/>
    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:background="#E2E2E2"
        android:layout_below="@+id/operator_history_toolbar"
        android:id="@+id/operator_history_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
