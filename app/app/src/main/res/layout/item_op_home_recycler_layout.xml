<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_shape_background"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/home_car_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:letterSpacing="0.1"
            android:layout_alignParentTop="true"
            android:textColor="#515151"
            android:textSize="18sp"
            tools:text="车牌号" />

        <TextView
            android:id="@+id/home_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:textColor="#6F6B6B"
            android:layout_toLeftOf="@+id/home_right_imageView"
            android:layout_marginStart="16dp"
            android:layout_centerInParent="true"
            android:text="00:00"/>


        <ImageView
            android:id="@+id/home_right_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99807D7D" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/recycler_detail"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_list_detail"
                android:text="详细"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recycler_message"
                android:drawableTop="@drawable/ic_list_message"
                android:gravity="center"
                android:text="信息"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recycler_pay"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_list_pay"
                android:gravity="center"
                android:text="支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>