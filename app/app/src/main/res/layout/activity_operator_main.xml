<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:background="@drawable/fantasy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs">
    </androidx.viewpager2.widget.ViewPager2>

    <RadioGroup
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/style_home_tab"
            android:text="主页"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/nearby_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/style_nearby_tab"
            android:text="附近"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />


        <View style="@style/Custom.TabRadioButton" />

        <RadioButton
            android:id="@+id/message_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/style_message_tab"
            android:text="信息"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/my_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/style_my_tab"
            android:text="我的"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />

    </RadioGroup>

        <ImageView
            android:id="@+id/add_car"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add" />


</RelativeLayout>
