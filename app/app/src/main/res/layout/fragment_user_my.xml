<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:text="我的设置"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="#F5F5F5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ospark_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/user_my_car"
        android:text="车辆"
        android:textSize="20dp"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="基本设置"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="绑定车辆"
        android:id="@+id/user_my_bind_car"
        android:textSize="16sp"
        android:padding="20dp"
        android:background="@drawable/style_list_with_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="解除绑定"
        android:id="@+id/user_my_unbind_car"
        android:textSize="16sp"
        android:padding="20dp"
        android:background="@drawable/style_list_with_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="修改密码"
        android:id="@+id/user_my_change_password"
        android:textSize="16sp"
        android:padding="20dp"
        android:background="@drawable/style_list_with_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="账单"
        android:paddingStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user_my_unpaid"
        android:padding="20dp"
        android:text="未支付"
        android:drawableEnd="@drawable/ic_right"
        android:background="@drawable/style_list_with_border"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="20dp"
        android:text="历史账单"
        android:id="@+id/user_my_bills"
        android:drawableEnd="@drawable/ic_right"
        android:background="@drawable/style_list_with_border"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="登出"
        android:id="@+id/user_my_logout"
        android:drawableEnd="@drawable/ic_right"
        android:background="@drawable/style_list_with_border"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>


</ScrollView>
