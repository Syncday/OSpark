<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/user_viewPager"
        android:background="@drawable/fantasy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/user_tabs">
    </androidx.viewpager2.widget.ViewPager2>

    <RadioGroup
        android:id="@+id/user_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/user_home_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/style_home_tab"
            android:text="主页"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/user_message_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/style_message_tab"
            android:text="信息"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/user_my_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/style_my_tab"
            android:text="我的"
            android:textColor="@drawable/style_tab_text_color"
            android:textSize="12sp" />

    </RadioGroup>



</RelativeLayout>
